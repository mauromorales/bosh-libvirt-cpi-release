#!/usr/bin/env bash

set -e -x

BOSH_PACKAGES_DIR=${BOSH_PACKAGES_DIR:-/var/vcap/packages}

cp -a bosh_libvirt_cpi/* ${BOSH_INSTALL_TARGET}

export BUNDLE_CACHE_PATH="vendor/package"
export BUNDLE_WITHOUT="development:test"
bundle_cmd="$BOSH_PACKAGES_DIR/ruby_libvirt_cpi/bin/bundle"

cd ${BOSH_INSTALL_TARGET}

$bundle_cmd install \
  --local           \
  --no-prune        \
  --deployment
